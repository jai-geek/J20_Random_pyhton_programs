pattern  no 8:-

               * * * *
               * * * *
               * * * *
               
               * * * *
               * * * *
               
               * * * *
 solution:-
 /*user input number */
 a=int(input("number"))
i=1

while(i<=a):
    
    space= a-i
    
    
    while(space):
        print(" ")
        space-=1
        
        j=1 
        while(j<=a):
            print("*",end=" ")
            j+=1
    
    print("\n")
    i+=1
